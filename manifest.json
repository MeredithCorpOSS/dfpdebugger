{
  "manifest_version": 2,
  "name": "DFP Debugger",
  "description": "This extension allows you to debug DFP calls and responses",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon_disabled.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "webRequest",
    "*://*.google.com/",
    "*://*/",
    "tabs",
    "activeTab"
  ]
}
